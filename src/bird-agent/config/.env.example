# Bird.com API Configuration
BIRD_API_KEY=your_bird_api_key_here
BIRD_WORKSPACE_ID=your_workspace_id_here
BIRD_BASE_URL=https://api.bird.com
BIRD_WEBHOOK_SECRET=your_webhook_secret_here

# WhatsApp Channel Configuration
BIRD_WHATSAPP_CHANNEL_ID=your_whatsapp_channel_id_here
BIRD_WHATSAPP_PHONE_NUMBER=+525512345678
BIRD_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Application Configuration
NODE_ENV=development
PORT=3000
PUBLIC_WEBHOOK_URL=https://your-domain.com/webhooks/bird

# OpenAI Configuration (for Bird.com AI integration)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4

# Database Configuration (for conversation storage)
DATABASE_URL=postgresql://user:password@localhost:5432/urbanhub
REDIS_URL=redis://localhost:6379

# UrbanHub Specific Configuration
URBANHUB_PROPERTY_IDS=josefa-reforma,matilde-juarez
URBANHUB_DEFAULT_LANGUAGE=es_MX
URBANHUB_TIMEZONE=America/Mexico_City

# Feature Flags
ENABLE_TOUR_SCHEDULING=true
ENABLE_LEAD_QUALIFICATION=true
ENABLE_FOLLOW_UP_AUTOMATION=true
ENABLE_HUMAN_HANDOFF=true

# Agent Configuration
AGENT_NAME=Maya
AGENT_ROLE=Asistente Digital UrbanHub
AGENT_PERSONALITY=friendly,professional,helpful

# Tour Scheduling Configuration
TOUR_BOOKING_ADVANCE_HOURS=24
TOUR_DURATION_MINUTES=45
TOUR_AVAILABILITY_DAYS_AHEAD=14

# Lead Qualification Thresholds
LEAD_SCORE_HOT_THRESHOLD=80
LEAD_SCORE_WARM_THRESHOLD=50
LEAD_RESPONSE_TIMEOUT_MINUTES=5

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://analytics.urbanhub.mx/api/events

# Demo Mode Configuration
DEMO_MODE=false
DEMO_PHONE_NUMBERS=+525555555555,+525555555556
DEMO_AUTO_RESPONSES=true